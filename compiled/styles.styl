  margin: 0
  text-rendering: auto
  font-smoothing(antialiased)
  box-sizing: border-box

a
  color: inherit
  text-decoration: none

html 
  height: 100%

body 
  width: 100%
  height: 100%
  font: normal 14px/24px 'Roboto','Helvetica','Helvetica Neue','Arial',sans-serif 
  background-color: #fff
  color: main-color 
  overflow-x: hidden
  overflow-y scroll
  
.wrapper 
  position: relative
  width: 100%

.title-container 
  width: 100%
  height: 4rem
  center-flex(column)
  position fixed
  top 0
  z-index 9998
  background #fff
  box-shadow 0 0 5px 1px #222
  @media (max-width 720px)
    //height 2rem

.title 
  position: relative
  font-size: 28px
  font-weight 300
  text-align: center
  @media (max-width: 720px)
    font-size: 16px;
  span 
    font-weight 700
  
.container
  display: flex
  position: relative

.translate-small-container
  transform: translateX(50px)

.main 
  z-index: 1
  center-flex(column)
  min-height 550px
  height 100vh
  background: linear-gradient(to bottom,rgba(0,0,0,.75),rgba(0,0,0,.35), rgba(0,0,0,0.75)),url(../assets/img/wall3.jpeg)
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  background-attachment fixed
  overflow: hidden
  border-top 1px solid #eee
  transition(all 1s cubic-bezier(cubic-value))
  @media (max-width: 720px)
    height 100vh

.main:before,
.main:after
  transition(all 1s cubic-bezier(cubic-value))
  @media (max-width: 720px)
    display: none;

.cover--1
  content: ''
  position: absolute
  top 0
  width: 100%
  height: 100%
  z-index: -2
  background-color: #fff
  right: 50%
  transition(right 1s cubic-bezier(cubic-value))
  transform skew(-45deg)

.cover--2
  content: ''
  position: absolute
  top 0
  width: 100%
  height: 100%
  z-index: -2
  background-color: #fff
  left: 50%
  transition(left 1s cubic-bezier(cubic-value))
  transform skew(-45deg)
  
.cover--1--removed
  right 100%
  @media (max-width 720px)
    display none
  
.cover--2--removed
  left 100%
  @media (max-width 720px)
    display none

