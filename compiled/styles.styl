  position: absolute
  z-index: -1
  width: 100%
  height: 100%
  top: 0
  left: 0
  bottom: 0
  right: 0
  background-color: #fff
  transform: translateX(-100%)
  transition(all .5s cubic-bezier(cubic-value))
  @media (max-width: 720px)
    display: none;

.link:hover:before
  transform: translateX(0%)

.btn
  font-size: 12px
  letter-spacing: 4px
  text-transform: uppercase
