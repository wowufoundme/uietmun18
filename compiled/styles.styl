/*
 *  NAVIGATION AND NAV BAR
 */
.nav-container 
  height: 100%

.nav 
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background deep-blue
  @media (max-width 720px)
    background linear-gradient(to top,rgba(0,0,0,.8),rgba(0,0,0,.8)), url('../assets/img/logo-full.png')
    background-size 100%
    background-position center
    background-repeat no-repeat
  // background #4b6cb7
  // background -webkit-linear-gradient(to bottom, #182848, #4b6cb7)
  // background linear-gradient(to bottom, #182848, #4b6cb7)
  z-index: 9997
  margin 0
  center-flex(row)
  transform: translateY(-120%)
  transition(all 1s cubic-bezier(cubic-value)) 
  @media (max-width: 720px)
    top 0
    bottom 0
    left 0
    right 0
    margin: 0

.is-active
  transform translateY(0)
  
.current
  text-decoration: line-through

.nav-toggle-container 
  position: fixed
  z-index 9998
  top: 10px 
  left: 30px
  cursor pointer
  @media (max-width: 720px)
    top 10px
    left 20px
  .toggle
    position relative
    transform translate(-50%,50%)
    width 40px
    height 40px
    background transparent
    span
      position absolute
      width 20px
      height 2px
      background #222
      transform translate(150%,0)
      transition .25s
      transition-delay 0
      &:before
        content ''
        position absolute
        width 20px
        height 2px
        top -6px
        background #222
        transform translate(0,0)
        transition-property top, transform
        transition-delay 0, .5s
        transition-duration .5s, .5s
      &:after
        content ''
        position absolute
        width 20px
        height 2px
        top 6px
        background #222
        transform translate(0,0)
        transition-property top, transform
        transition-delay 0, .5s
        transition-duration .5s, .5s
  .active
    span
      background transparent
      &:before
        top 0px
        transform rotate(45deg)  
        transition-delay 0s, .5s
      &:after
        top 0px
        transform rotate(-45deg)  
        transition-delay 0s, .5s

.navigation
  display: block
  .nav-item
    position: relative
    margin: .6rem auto
    padding 5px
    font-family 'Playfair Display'
    font-size: 32px
    letter-spacing 0
    font-weight 400
    color #eee
    line-height: 40px
    overflow: hidden
    transition(all .2s cubic-bezier(cubic-value))
    &:before
      content: ''
      position: absolute
      z-index: -1
      width: 100%
      height: 100%
      left: 0
      bottom: 0
      right: 0
      background-color #111
      transform: translateX(-105%)
      transition(all .2s cubic-bezier(cubic-value))
      @media (max-width: 720px)
        display: none;
    &:hover
      color #ffff
      &:before
        transform: translateX(0)


